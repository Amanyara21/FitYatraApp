<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:textSize="24sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardBreakfast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="16dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textBreakfastTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="Breakfast"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textBreakfastFoodname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Foodname"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textBreakfastFat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fat: "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textBreakfastProtein"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Protein: "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textBreakfastCarbohydrates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Carbohydrates: "
                android:textSize="16sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardLunch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="16dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textLunchTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="Lunch"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textLunchFoodname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Foodname"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textLunchFat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fat: "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textLunchProtein"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Protein: "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textLunchCarbohydrates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Carbohydrates: "
                android:textSize="16sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardDinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="16dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textDinnerTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="Dinner"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textDinnerFoodname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Foodname"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textDinnerFat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fat: "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textDinnerProtein"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Protein: "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textDinnerCarbohydrates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Carbohydrates: "
                android:textSize="16sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
